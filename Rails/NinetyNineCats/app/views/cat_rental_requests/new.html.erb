<h1>New Request</h1>


<form action="<%= cat_rental_requests_url %>" method="post">

	<label for="cat_dropdown">Cat</label>
	<br>
	<select id="cat_dropdown" name="cat_rental_request[cat_id]">
		<option selected disabled>--Please select a cat--</option>
		<% @cats.each do |cat| %>
			<option value="<%= cat.id %>"><%= cat.name %></option>
		<% end %>
	</select>
	<br>

	<label for="starting">Start Date</label>
	<br>
	<input id="starting" type="date" name="cat_rental_request[start_date]">
	<br>


	<label for="ending">End Date</label>
	<br>
	<input id="ending" type="date" name="cat_rental_request[end_date]">
	<br>

	<br>
	<input type="submit" value="request this cat!">
	
</form>